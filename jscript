#Functions in javascript

function hello() {
    console.log("hello world from javascript");
    console.log("prog is fun");
    console.log("world is flat");

}

hello();


function number(num){
    console.log("number is " + num);

}

number(114);


function product(a, b){
    return a*b;
}

let j=product(2,2);
console.log(j);

function multiply(num, _num){
    console.log(num*_num);
}
multiply(15,15);

#Conditions in javaScript

let number1= [];
number1= [1, 2, 3, 1, ,1, 2,];
if (number1[0] == number1[1]){
    console.log("if block executes and value is 1");

} else{
    console.log("else block execute");
}



if(number1[0]==number1[2]){
    console.log("if block also ececutes");
}else if(number1[1]==number1[5]){
    console.log("elseif executes");

}else{
    console.log("final executes")

}

#Arrays in javascript

let shopping=[];
shopping = ["jeans", "shirt", "shoes", 500];
console.log(shopping);
console.log(shopping[0]);
console.log(shopping[1]);
console.log(shopping[2]);
console.log(shopping[3]);


let lst=[];
lst = ["dell", "lenovo", "acer", "hp"];
console.log(lst);
console.log(lst[0]);
console.log(lst[1]);
console.log(lst[2]);
console.log(lst[3]);
    

let numbers=[]
numbers = [1, 2, 3, 4, 5, 6, 7];
console.log(numbers[0]);
console.log(numbers[1]);
console.log(numbers[2]);
console.log(numbers[3]);
console.log(numbers[4]);
console.log(numbers[0] + numbers[1] + numbers[2] + numbers[3] + numbers[4]);
console.log(numbers.sort());
console.log(numbers.push(6));
console.log(numbers.push(7));

console.log(numbers.pop(6));
console.log(numbers);

let mix=["pawan", 23, "kumar"];
console.log(typeof(mix));

