#objects in javascript

let pen = {
    type:'watermark',
    color:'blue',
    cost: 10,
};
 
console.log(pen);
console.log(pen.type,pen.color,pen.cost);




let pawan={
    email:"pawan@hotmail.com",
    age:25,
    school:"zphs",

    subject:["physics", "chem", "maths"]


};

console.log(pawan.subject[1], pawan.age,pawan.email,pawan.school);


#switch condition in javascript

let game="cricket";
switch(game){
    case "football":
     console.log("i love football");
    break;
    case "basketball":
    console.log("i love basketball");
    break;
    case "cricket":
    console.log("i love cricket");
    break;
    case "throwball":
    console.log("i love throwball");
    break;
    default:
    console.log("i love to play other games");
    break;

}

